<style>
  .container {
    width: 60%;
    background: #f5f5f5;
    border: 20px solid #337ab7;
    border-radius: 50px;

}

.center1 {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 63px;
}
.btn-primary {
    color: #754545;
    background-color: #337ab7;
    border-color: #337ab7;
}
.btn-primary:hover {
  color: orange;
}
</style>
<%= render 'shared/errors', obj: @article %>
<div class="container-fluid">
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => { class: "form-horizontal", role: "form" }) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%#= f.label :title %>
          <label>Title </label>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of Message", autofocus: true %>
        </div>
      </div>
       <div class="form-group">
        <div class="control-label col-sm-2">
          <%#= f.label :sender %>
          <label>Full Name</label>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :sender, class: "form-control", placeholder: "Your Full Name", autofocus: true %>
        </div>
      </div>



      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Your Email", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%#= f.label :description %>
          <label>Your Message </label>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Your Message" %>
        </div>
      </div>

      <div class="form-group">
        <div class="center1">
    <button class="btn btn-primary"><%= submit_tag("Send Your Message") %></button>
  </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">

    </div>
  </div>
</div>
</div>
